<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.monitor.changtian.activity.task.SampleListInfoActivity">

    <include layout="@layout/navigation_bar" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

        <com.monitor.changtian.widght.CustomFAB xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cf_imageButton"
            android:layout_width="40dp"
            android:visibility="gone"
            android:layout_height="40dp"
            android:layout_gravity="center|right|bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_control_point_black_24dp"
            android:tint="@android:color/white"
            custom:bg_color="@color/colorPrimary" />
    </FrameLayout>
</LinearLayout>
