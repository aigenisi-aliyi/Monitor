<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg1_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:background="@drawable/yuan_jiao"
        android:elevation="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:text="实验人员信息"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/map11212"
                android:gravity="center"
                android:text="时间信息"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:text="实验人员信息"
                android:textSize="17sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="地点"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:hint="请选择地点信息"
                        android:paddingLeft="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="时间"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/et_mix"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="开始时间"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.5"
                            android:background="@color/colorgay" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/et_max"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="结束时间"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuan_jiao"
        android:elevation="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:text="实验人员信息"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/caiyang"
                android:gravity="center"
                android:text="采样人员"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:text="实验人员信息"
                android:textSize="17sp" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color3"
            android:text="(以下为辅助人员)"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list_f"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuan_jiao"
        android:elevation="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:text="实验人员"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:text="实验人员信息"
                android:textSize="17sp" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuan_jiao"
        android:elevation="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:text="实验人员信息"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/fuzhu"
                android:gravity="center"
                android:text="辅助人员"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:textSize="17sp" />
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuan_jiao"
        android:elevation="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:text="实验人员信息"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/car"
                android:gravity="center"
                android:text="车辆信息"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:textSize="17sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuan_jiao"
        android:elevation="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/device"
                android:gravity="center"
                android:text="设备信息"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:textSize="17sp" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list_der"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuan_jiao"
        android:elevation="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/shiji"
                android:gravity="center"
                android:text="耗材信息"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:textSize="17sp" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list_shiji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuan_jiao"
        android:elevation="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:textSize="17sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="备注信息"
                android:textSize="17sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/test"
                android:gravity="center"
                android:textSize="17sp" />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_reamk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>